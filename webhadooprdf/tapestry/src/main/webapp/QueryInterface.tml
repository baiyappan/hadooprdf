         <form t:type="form" t:id="inputs">
		<table id="triples">
			<tr>
				<th>Subject</th>
				<th>Predicate</th>
				<th>Object</th>
                                <th>More</th>
			</tr>
			<tr id="row">
                             	<td><input t:type="TextField" value="subject" t:validate="required"/></td>
				<td><select t:type="Select" model="literal:Ms,Mrs,Mr,Dr,Prof" value="selectedPredicate"/></td>
				<td><input t:type="TextField" value="object" t:validate="required"/></td>
                                <td><input type="submit" value="+"></input></td>
                        </tr>
                        <tr>
				<td colspan="4"><input t:type="TextArea" value="Query" size="200px"/></td>
			</tr>			
		</table>
                 <br/>
                 <input type="submit" value="Submit-Query"/>
